(function() {
  if ($("#newUserSession").length > 0) {
    return
  }

  var $menu = $('<%= j render("form") %>').hide()
  var $header = $(".site-header")
  $header.children().fadeOut('fast', function() {
    $menu.appendTo($header).fadeIn()
    $menu.find('#session_email').focus()
  })

  $menu.on('click', '.dismiss', function() {
    $menu.fadeOut(function() {
      $menu.remove()
      $header.children().fadeIn()
    })
  })

})()
