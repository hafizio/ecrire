<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <%= description_meta_tag %>
  <link rel="author" href="<%= Rails.configuration.meta.author %>"/>
  <%= open_graph_tags %>
</head>
<body id="<%= controller_name %>-<%= action_name %>">
  <% if signed_in? %>
    <%= admin_navigation %>
  <% end %>

  <%= yield %>

</body>
</html>
