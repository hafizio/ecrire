<!DOCTYPE html>
<html>
  <head>
    <%= title_tag %>
    <%= assets_tags %>
    <%= meta_informations_tags %>

    <meta name="HandheldFriendly" content="True" />
    <meta name="MobileOptimized" content="320" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  </head>

  <%= body_tag id: [controller_name, action_name].join('-') do %>

    <%= admin_navigation %>

    <div id="fb-root"></div>

    <header class="site-header">
      <div class="wrapper">
        <div class="fb-like" data-href="https://www.facebook.com/lamarmite.ca" data-layout="button_count" data-action="like" data-show-faces="false" data-share="false"></div>
        <a id="Logo" href="/">
          <span class="title">Le blogue</span>
        </a>
      </div>
    </header>

    <%= yield -%>

  <% end %>
</html>
