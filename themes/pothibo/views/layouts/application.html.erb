<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <link rel="shortcut icon" href="/favicon.ico" />
  <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <%= description_meta_tag %>
  <link rel="author" href="<%= Rails.configuration.meta.author %>"/>
  <link rel="alternate" type="application/rss+xml" title="RSS" href="/feed">
  <%= open_graph_tags %>
</head>
<body id="<%= controller_name %>-<%= action_name %>">
  <% if signed_in? %>
    <%= admin_navigation %>
  <% end %>

  <% flash.each do |name, msg| %>
    <%= content_tag :div, class: %W(flash #{name}) do %>
      <%= content_tag :span, msg, class: %w(message) %>
      <%= link_to("x", "javascript:void(0)", class: %w(dismiss button)) %>
    <% end %>
  <% end %>

  <%= yield %>

</body>
</html>
